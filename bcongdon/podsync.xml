<?xml version="1.0" encoding="utf-8"?>
<Container>
  <Name>Podsync</Name>
  <Description>Turn YouTube or Vimeo channels, users, or playlists into podcast feeds</Description>
  <Registry>https://hub.docker.com/r/mxpv/podsync/</Registry>
  <Repository>mxpv/podsync</Repository>
  <BindTime>true</BindTime>
  <Privileged>false</Privileged>
  <Networking>
    <Mode>bridge</Mode>
    <Publish>
      <Port>
        <HostPort>8080</HostPort>
        <ContainerPort>8080</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>
    </Publish>
  </Networking>
  <Environment/>
  <Config 
    Type="Path" 
    Name="Config File" 
    Target="/app/config.toml" 
    Default="/mnt/user/appdata/podsync/config.toml" 
    Mode="rw" 
    Description="The podsync config file."
    Required="true">
  </Config>
  <Config 
    Type="Path" 
    Name="Data Directory" 
    Target="/app/data/" 
    Default="/mnt/user/appdata/podsync/data" 
    Description="Where to store podsync's data (including podcast episodes)" 
    Mask="rw" 
    Required="true">
  </Config>
  <Icon>https://github.com/mxpv/podsync/raw/master/docs/img/logo.png</Icon>
  <ExtraParams></ExtraParams>
</Container>
